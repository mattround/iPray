<h1>Listing prayers</h1>

<% @prayers.each do |prayer| %>
<div class="card">
  <p class="title"><%= prayer.title %></p>
  <p class="request"><%= prayer.request %></p>
  <p class="by"><%= prayer.by %></p>
  <% if !prayer.answer.nil? %>
    <p class="answer"><%= prayer.answer %></p>
  <% end %>
  <p class="controls" align=right>
    <%= link_to 'Show', prayer %> |
    <%= link_to 'Edit', edit_prayer_path(prayer) %> |
    <%= link_to 'Destroy', prayer, confirm: 'Are you sure?', method: :delete %>
  </p>
</div>
<% end %>

<br />

